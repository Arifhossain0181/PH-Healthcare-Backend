datasource db {
  provider = "postgresql"
}

model Specialty {
  id String @id @default(uuid(7))

  title       String  @unique @db.VarChar(255)
  description String? @db.VarChar(505)
  icon        String? @db.VarChar(255)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isDeleted Boolean   @default(false)
  deletedAt DateTime?

  doctorSpecialties DoctorSpecialty[]

  @@index([isDeleted], name: "isDeleted_index")
  @@index([title], name: "title_index")
  @@map("specialties")
}

model DoctorSpecialty {
  id          String   @id @default(uuid(7))
  doctorId    String
  specialtyId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  doctor Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  specialty Specialty @relation(fields: [specialtyId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([doctorId, specialtyId])
  @@index([doctorId], name: "doctorId_index")
  @@index([specialtyId], name: "specialtyId_index")
  @@map("doctor_specialties")
}

model Patient {
  id String @id @default(uuid())

  name          String
  email         String    @unique
  ProfilePhoto  String?
  contactNumber String?
  address       String?
  isDeleted     Boolean   @default(false)
  deletedAt     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([email], name: "email_index")
  @@index([deletedAt], name: "deletedAt_index")
  @@map("patient")
}
