model Specialty {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  title       String  @unique @db.VarChar(255)
  description String? @db.VarChar(505)
  icon        String? @db.VarChar(255)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isDeleted Boolean   @default(false)
  deletedAt DateTime?

  doctorSpecialties DoctorSpecialty[]

  @@index([isDeleted], name: "isDeleted_index")
  @@index([title], name: "title_index")
  @@map("specialties")
}


model DoctorSpecialty {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  doctorId     String   @db.Uuid
  specialtyId  String   @db.Uuid
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  doctor       Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  specialty    Specialty @relation(fields: [specialtyId], references: [id], onDelete: Cascade, onUpdate: Cascade)


  @@unique([doctorId, specialtyId])
  @@index([doctorId], name: "doctorId_index")
  @@index([specialtyId], name: "specialtyId_index")
  @@map("doctor_specialties")
}